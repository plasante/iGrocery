	        <div class="collapse navbar-collapse" id="navbarCollapse">
	            <ul class="nav navbar-nav navbar-right">
	                <li class="active"><%= link_to "Home", '#' %></li>
	                <li><%= link_to "Help", '#' %></a></li>
	                <li><%= link_to "Log in", '#' %></li>
	            </ul>
	        </div>
	    </div>
	</nav>
	<div class="container">
		<%= yield %>
	</div>
